<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here -->
        <item name="colorPrimary">#2196F3</item>
        <item name="colorPrimaryDark">#1976D2</item>
        <item name="colorAccent">#FF4081</item>
        <item name="android:windowBackground">@color/background_color</item>
    </style>

    <!-- Button styles -->
    <style name="ButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>

    <style name="ButtonStyle.Start">
        <item name="android:background">@drawable/button_start_background</item>
    </style>

    <style name="ButtonStyle.Stop">
        <item name="android:background">@drawable/button_stop_background</item>
    </style>

    <!-- Text styles -->
    <style name="TitleTextStyle">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#333333</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="StatusTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:minHeight">60dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="DescriptionTextStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#666666</item>
        <item name="android:lineSpacingExtra">4dp</item>
    </style>

</resources>